generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// University Table
model University {
  id          Int          @id @default(autoincrement())
  name        String
  country     String
  region      String? // e.g. South India, North India
  latitude    Float
  longitude   Float
  category    Category
  inspections Inspection[] // relation to inspections
}

// Employee Table
model Employee {
  id          Int          @id @default(autoincrement())
  name        String
  department  String? // optional extra info
  inspections Inspection[] // relation to inspections
}

// Inspection Table (join table)
model Inspection {
  id           Int      @id @default(autoincrement())
  universityId Int
  employeeId   Int
  inspectedAt  DateTime @default(now())

  university University @relation(fields: [universityId], references: [id])
  employee   Employee   @relation(fields: [employeeId], references: [id])
}

// Enum for category filter
enum Category {
  ENGINEERING
  ARTS
  FINANCE
  SCIENCE
}
